<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background_color="FFFACB54"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pc.kindakidz.Reading"
    tools:showIn="@layout/activity_reading"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/a1"
        android:layout_gravity="center_horizontal"></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen to it"
            android:id="@+id/txtrd1"
            android:layout_gravity="left|center_vertical"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#e51f1f"
            />

        <ImageButton
            android:layout_width="63dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton"
            android:layout_gravity="center"
            android:src="@drawable/audcap"
            android:visibility="visible"
            android:layout_marginLeft="40dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/capaud2"
            android:onClick="onButtonClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Say it"
            android:id="@+id/txtrd"
            android:layout_gravity="center_horizontal|top"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#e51f1f"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hold and speak"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#5d0707"
            android:textStyle="bold" />

    </FrameLayout>

</LinearLayout>
